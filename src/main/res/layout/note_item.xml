<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#412725"
            android:padding="15dp"
            >
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/priority"
                android:textColor="#ffff"
                android:layout_gravity="center|left"
                android:gravity="center|left"
                android:textSize="18sp"
                android:layout_marginRight="10dp"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="1"
                android:layout_gravity="center|right"
                android:gravity="center|right"
                android:textSize="18sp"
                android:textColor="#ffff"
                android:id="@+id/text_view_priority"
                android:layout_weight="1"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="#ffff"
            android:padding="15dp"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                >
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="16sp"
                    android:id="@+id/text_view_title"
                    android:layout_gravity="center|left"
                    android:gravity="center|left"
                    android:text="Tên Sinh Viên"
                    android:textColor="#000000"
                    />
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="16sp"
                    android:layout_gravity="center|left"
                    android:gravity="center|left"
                    android:text="Năm Sinh"
                    android:id="@+id/text_view_description"
                    android:textColor="#000000"
                    />
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="16sp"
                    android:id="@+id/tv_hometown"
                    android:text="Quê quán"
                    android:layout_gravity="center|left"
                    android:gravity="center|left"
                    android:textColor="#000000"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center|right"
                android:gravity="center|right"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_height="24dp"
                    android:layout_gravity="center|right"
                    android:gravity="center|right"
                    android:id="@+id/imv_delete"
                    android:layout_width="24dp"
                    android:src="@drawable/ic_delete_black_24px"
                    />
                <ImageView
                    android:layout_height="24dp"
                    android:layout_gravity="center|right"
                    android:gravity="center|right"
                    android:id="@+id/imv_update"
                    android:layout_width="24dp"
                    android:src="@drawable/ic_update_black_24px"
                    />
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#030303"
            />
    </LinearLayout>
</RelativeLayout>